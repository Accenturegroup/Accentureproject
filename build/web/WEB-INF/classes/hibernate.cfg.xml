<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Accenture?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="groups.hbm.xml"/>
    <mapping resource="learner.hbm.xml"/>
    <mapping resource="Assessment.hbm.xml"/>
    <mapping resource="trainer.hbm.xml"/>
    <mapping resource="markregister.hbm.xml"/>
    <mapping resource="LearnerAssessment.hbm.xml"/>
    <mapping resource="feedback1.hbm.xml"/>
    <mapping resource="location.hbm.xml"/>
    <mapping resource="questionnaire.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
